package com.medixpress.commercial.sqlite;

import java.io.IOException;

import android.content.Context;

public class DemoDatabase {
	// Creates a demonstration database
	
	private void loadDictionary(final Context context) {
        new Thread(new Runnable() {
            public void run() {
                try {
                    createDemoDatabase(context);
                } catch (IOException e) {
                    throw new RuntimeException(e);
                }
            }
        }).start();
    }

	private void createDemoDatabase(Context context) throws IOException {
		DatabaseHelper helper = new DatabaseHelper(context);
		
		Vendor v1 = new Vendor("Danktown Express", "Boulder, Colorado", "8am - 7pm");
		helper.addVendor(v1);
		
		Product v1_p1 = new Product
	}
}
